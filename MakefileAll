	@echo '$(ACYellow)$(ACBold)v$(ACPlain)'
	qmake && make
	@echo 

###############################################################
clean:
	@echo 
	@echo '$(ACRed)$(ACBold)+=================================== Cleaning Monicelli ============================================<<$(ACPlain)'
	make clean
	@echo 
	@echo '$(ACRed)$(ACBold)+=================================== Cleaning customCheckBox  =======================================<<$(ACPlain)'
	cd plugins/customCheckBox  && make clean && cd ../ 
	@echo '$(ACRed)$(ACBold)+=================================== Cleaning customComboBox =======================================<<$(ACPlain)'
	cd plugins/customComboBox && make clean && cd ../ 
	@echo '$(ACRed)$(ACBold)+=================================== Cleaning customLineEdit =======================================<<$(ACPlain)'
	cd plugins/customLineEdit && make clean && cd ../ 
	@echo '$(ACRed)$(ACBold)+=================================== Cleaning customSpinBox  =======================================<<$(ACPlain)'
	cd plugins/customSpinBox  && make clean && cd ../ 
	@echo '$(ACRed)$(ACBold)+=================================== Cleaning customTableView  =======================================<<$(ACPlain)'
	cd plugins/customTableView  && make clean && cd ../ 
	@echo '$(ACRed)$(ACBold)+=================================== Cleaning customTextEdit =======================================<<$(ACPlain)'
	cd plugins/customTextEdit && make clean && cd ../ 

###############################################################
distclean:
	@echo 
	@echo '$(ACRed)$(ACBold)+=================================== Cleaning Monicelli ============================================<<$(ACPlain)'
	make distclean && qmake
	@echo 
	@echo '$(ACRed)$(ACBold)+=================================== Cleaning customCheckBox  =======================================<<$(ACPlain)'
	cd plugins/customCheckBox  && make distclean && qmake
	@echo 
	@echo '$(ACRed)$(ACBold)+=================================== Cleaning customComboBox =======================================<<$(ACPlain)'
	cd plugins/customComboBox && make distclean && qmake
	@echo 
	@echo '$(ACRed)$(ACBold)+=================================== Cleaning customLineEdit =======================================<<$(ACPlain)'
	cd plugins/customLineEdit && make distclean && qmake
	@echo 
	@echo '$(ACRed)$(ACBold)+=================================== Cleaning customSpinBox  =======================================<<$(ACPlain)'
	cd plugins/customSpinBox  && make distclean && qmake
	@echo 
	@echo '$(ACRed)$(ACBold)+=================================== Cleaning customTableView  =======================================<<$(ACPlain)'
	cd plugins/customTableView  && make distclean && qmake
	@echo 
	@echo '$(ACRed)$(ACBold)+=================================== Cleaning customTextEdit =======================================<<$(ACPlain)'
	cd plugins/customTextEdit && make distclean && qmake
