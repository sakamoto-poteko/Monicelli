ACBlack       = [0;30m
ACBlue        = [0;34m
ACGreen       = [0;32m
ACCyan        = [0;36m
ACRed         = [0;31m
ACPurple      = [0;35m
ACBrown       = [0;33m
ACGray        = [0;37m
ACDarkGray    = [1;30m
ACLightBlue   = [1;34m
ACLightGreen  = [1;32m
ACLightCyan   = [1;36m
ACLightRed    = [1;31m
ACLightPurple = [1;35m
ACYellow      = [1;33m
ACWhite       = [1;37m

ACPlain       = [0m
ACBold        = [1m
ACUnderline   = [4m
ACBlink       = [5m
ACReverse     = [7m

ACClear       = [2J
ACClearL      = [2K

all: customComboBox customLineEdit customTextEdit customSpinBox customCheckBox customTableView customTableWidget MonicelliProject
	
###############################################################
customCheckBox:
	@echo 
	@echo '$(ACYellow)$(ACBold)+============================== Building customCheckBox plugin ======================================<<$(ACPlain)'
	@echo '$(ACYellow)$(ACBold)|$(ACPlain)'
	@echo '$(ACYellow)$(ACBold)v$(ACPlain)'
	cd plugins/customCheckBox  && qmake && make 
	@echo '$(ACCyan)$(ACBold)+====== Installing =============<<$(ACPlain)'
	cd plugins/customCheckBox && make install
	@echo 

###############################################################
customComboBox:
	@echo 
	@echo '$(ACYellow)$(ACBold)+============================== Building customComboBox plugin ======================================<<$(ACPlain)'
	@echo '$(ACYellow)$(ACBold)|$(ACPlain)'
	@echo '$(ACYellow)$(ACBold)v$(ACPlain)'
	cd plugins/customComboBox && qmake && make 
	@echo '$(ACCyan)$(ACBold)+====== Installing =============<<$(ACPlain)'
	cd plugins/customComboBox && make install
	@echo 
        
###############################################################
